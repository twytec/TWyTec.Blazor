@page "/"

<div style="background-color: white;">
    <div>
        <button onclick="@Last">Last</button>
        <button onclick="@Netx">Next</button>
    </div>
    <HorizontalStepper ref="stepper">
        <StepperItem Header="Step">
            <p>1 Step</p>
            <p>@Text</p>
        </StepperItem>
        <StepperItem Header="Step">
            <p>2 Step</p>
            <p>@Text</p>
        </StepperItem>
        <StepperItem Header="Step">
            <p>3 Step</p>
            <p>@Text</p>
        </StepperItem>
        <StepperItem Header="Step">
            <p>4 Step</p>
            <p>@Text</p>
        </StepperItem>
    </HorizontalStepper>

    <div style="margin-top: 30px; background-color: white; display: grid; grid-template-columns: 600px auto;">
        <div style="grid-column: 1;">
            <VerticalStepper ref="vStepper">
                <StepperItem Header="1 Step">
                    <p>@Text</p>
                </StepperItem>
                <StepperItem Header="2 Step">
                    <p>@Text</p>
                </StepperItem>
                <StepperItem Header="3 Step">
                    <p>@Text</p>
                </StepperItem>
                <StepperItem Header="4 Step">
                    <p>@Text</p>
                </StepperItem>
            </VerticalStepper>
        </div>
        <div style="grid-column: 2;">
            <button onclick="@vNext">Next</button>
            <br />
            <button onclick="@vLast">Last</button>
            <br />
        </div>
    </div>
</div>

